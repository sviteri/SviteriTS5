<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SviteriTS5.Views.DeleteStudentPage"
             Title="DeleteStudentPage">
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Eliminar Estudiante" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

            <Entry x:Name="IdEntry" Placeholder="ID del Estudiante a Eliminar" />

            <Button Text="Eliminar" Clicked="OnDeleteClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>